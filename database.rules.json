{
  "rules": {
    "doa_pendek": {
      "isi": {
        ".read": true,
        ".write": "auth != null && auth.uid === '7ekW10BRpxYRTYfxvyDT3XXfgZW2'"
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "notifications": {
          ".indexOn": ["isRead"]
        },
        "transactions": {
          ".indexOn": ["date", "walletId", "type", "category"]
        },
        "wallets": {
          ".indexOn": ["isDefault", "type"]
        }
      }
    }
  }
}